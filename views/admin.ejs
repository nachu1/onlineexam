<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/style.css">

    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
            background: #f0f2f5;
        }

        /* HEADER */
        .header {
            background: #1e272e;
            color: white;
            padding: 16px 30px;
            font-size: 22px;
            font-weight: bold;
        }

        /* PAGE CONTAINER */
        .container {
            padding: 25px;
        }

        /* CARD */
        .card {
            background: white;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 25px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .card h2 {
            margin-top: 0;
            margin-bottom: 15px;
            color: #2f3640;
        }

        /* BUTTON GRID */
        .btn-group {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 12px;
        }

        .btn-group button {
            padding: 12px;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            cursor: pointer;
            background: #0984e3;
            color: white;
            transition: 0.25s;
        }

        .btn-group button:hover {
            background: #0652a3;
        }

        /* TABLE */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
            font-size: 14px;
        }

        table thead {
            background: #2f3640;
            color: white;
        }

        table th, table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }

        table tbody tr:nth-child(even) {
            background: #f8f9fa;
        }

        table tbody tr:hover {
            background: #eef3f7;
        }

        /* ✅ TABLE SCROLL (ONLY ADDITION) */
        .table-scroll {
            width: 100%;
            overflow-x: auto;
        }

        @media (max-width: 768px) {
            table {
                min-width: 900px; /* forces horizontal scroll on mobile */
                font-size: 12px;
            }
        }
    </style>
</head>

<body>

    <div class="header">Admin Dashboard</div>

    <div class="container">

        <!-- ACTIONS -->
        <div class="card">
            <h2>Exam Controls</h2>
            <div class="btn-group">
                <button onclick="location.href='/admin/add-question'">Add Question</button>
                <button onclick="nextExam()">Next Exam</button>
                <button onclick="startExam()">Start Exam</button>
                <button onclick="stopExam()">Stop Exam</button>
                <button onclick="publishResult()">Publish Result</button>
                <button onclick="location.href='/admin/view-questions'">View Questions</button>
                <button onclick="downloadMarklist()">Download Marklist</button>
                <button onclick="deleteAll()">Delete All Questions</button>
            </div>
        </div>

        <!-- RESULTS -->
        <div class="card">
            <h2>Student Results (Current Exam)</h2>

            <!-- ✅ ONLY WRAP TABLE -->
            <div class="table-scroll">
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Total</th>
                            <th>Score</th>
                            <th>Correct</th>
                            <th>Wrong</th>
                            <th>Not Attempted</th>
                            <th>Published</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% results.forEach(r => { %>
                        <tr>
                            <td><%= r.displayName ? r.displayName : (r.name || '-') %></td>
                            <td><%= r.totalQuestions ?? '-' %></td>
                            <td><%= r.score ?? '-' %></td>
                            <td><%= r.correct ?? '-' %></td>
                            <td><%= r.wrong ?? '-' %></td>
                            <td><%= r.notAttended ?? '-' %></td>
                            <td><%= r.published ? 'Yes' : 'No' %></td>
                            <td><%= r.createdAt ? new Date(r.createdAt).toLocaleString() : '-' %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <script>
        async function startExam() {
            const res = await fetch("/admin/start", { method: "POST" });
            alert((await res.json()).msg);
            location.reload();
        }
        async function stopExam() {
            const res = await fetch("/admin/stop", { method: "POST" });
            alert((await res.json()).msg);
            location.reload();
        }
        async function publishResult() {
            const res = await fetch("/admin/publish", { method: "POST" });
            alert((await res.json()).msg);
            location.reload();
        }
        async function nextExam() {
            const res = await fetch("/admin/next", { method: "POST" });
            alert((await res.json()).msg);
            location.reload();
        }
        async function downloadMarklist() {
            window.location = "/admin/download-marklist";
        }
    </script>

    <script src="/admin.js"></script>

</body>
</html>

